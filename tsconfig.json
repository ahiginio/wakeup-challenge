{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}